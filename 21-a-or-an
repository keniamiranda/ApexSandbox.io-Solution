public String aOrAn(String word) {
   if (word != null && word.length() > 0) {
        String firstChar = word.substring(0, 1).toLowerCase();
        if (firstChar.startsWith('a') || firstChar.startsWith('e') || firstChar.startsWith('i') || firstChar.startsWith('o') || firstChar.startsWith('u')) {
            return 'an ' + word;
        } else {
            return 'a ' + word;
        }
    }
    return word;
}   